{
  "name": "douglas-automation-demo",
  "version": "1.0.0",
  "description": "douglas.dev Automation Demo framework",
  "scripts": {
    "test:all": "npx playwright test",
    "test:chrome": "npx playwright test --project=chromium",
    "test:debug-chrome": "npm run test:chrome -- --debug --trace=on",
    "test:webkit": "npx playwright test --project=webkit",
    "test:debug-webkit": "npm run test:webkit -- --debug --trace=on",
    "setup": "npx playwright install",
    "report": "npx playwright show-report",
    "eslint": "npx eslint --ext .ts './src' './tests'"
  },
  "dependencies": {
    "@playwright/test": "^1.41.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-playwright": "^1.4.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint": "^8.54.0",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.2",
    "prettier": "^3.2.5"
  }
}
